<UserControl
    x:Class="YoutubeDownloader.Views.Dialogs.DownloadSingleSetupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:YoutubeDownloader.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:YoutubeDownloader.ViewModels.Dialogs"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    MinWidth="500"
    d:DataContext="{d:DesignInstance Type=dialogs:DownloadSingleSetupViewModel}"
    Loaded="{s:Action OnViewLoaded}"
    Style="{DynamicResource MaterialDesignRoot}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="8,16,8,0"
            FontSize="19"
            FontWeight="SemiBold"
            Text="{Binding Title}"
            TextTrimming="CharacterEllipsis"
            ToolTip="{Binding Title}">
            <TextBlock.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{s:Action CopyTitle}" Header="Copy" />
                </ContextMenu>
            </TextBlock.ContextMenu>
        </TextBlock>

        <!--  Author  -->
        <TextBlock
            Grid.Row="1"
            Margin="8"
            FontSize="15"
            Text="{Binding Video.Author.Title}" />

        <Grid
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            Background="Black">
            <!--  Thumbnail  -->
            <Image Source="{Binding Video, Converter={x:Static converters:VideoToHighestQualityThumbnailUrlConverter.Instance}}" />

            <!--  Duration  -->
            <TextBlock
                Margin="0,0,8,6"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="Black"
                FontWeight="Light"
                Foreground="White"
                Text="{Binding Video.Duration, TargetNullValue=Live}" />
        </Grid>

        <Grid Grid.Row="3" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Video option  -->
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock
                    Margin="8"
                    VerticalAlignment="Center"
                    Text="Format:" />
                <ComboBox
                    Width="150"
                    Margin="8"
                    VerticalAlignment="Center"
                    materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                    IsReadOnly="True"
                    ItemsSource="{Binding AvailableVideoOptions}"
                    SelectedItem="{Binding SelectedVideoOption}" />
            </StackPanel>

            <!--  Subtitle option  -->
            <StackPanel
                Grid.Column="2"
                IsEnabled="{Binding AvailableSubtitleOptions}"
                Orientation="Horizontal">
                <CheckBox
                    Margin="8"
                    VerticalAlignment="Center"
                    Content="Subtitles:"
                    IsChecked="{Binding ShouldDownloadSubtitles}" />
                <ComboBox
                    Width="150"
                    Margin="8"
                    materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                    IsEnabled="{Binding ShouldDownloadSubtitles}"
                    IsReadOnly="True"
                    ItemsSource="{Binding AvailableSubtitleOptions}"
                    SelectedItem="{Binding SelectedSubtitleOption}" />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="4"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <!--  OK  -->
            <Button
                Margin="8"
                Command="{s:Action Confirm}"
                Content="DOWNLOAD"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />

            <!--  Cancel  -->
            <Button
                Margin="8"
                Command="{s:Action Close}"
                Content="CANCEL"
                IsCancel="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</UserControl>
