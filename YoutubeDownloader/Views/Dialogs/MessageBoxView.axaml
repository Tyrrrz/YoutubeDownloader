<UserControl
    x:Class="YoutubeDownloader.Views.Dialogs.MessageBoxView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogs="clr-namespace:YoutubeDownloader.ViewModels.Dialogs"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    Width="320"
    MinWidth="280"
    MinHeight="120"
    MaxWidth="350"
    MaxHeight="250"
    x:DataType="dialogs:MessageBoxViewModel">
    <Grid Margin="0" RowDefinitions="Auto,*,Auto">
        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="16,14,16,8"
            FontSize="15"
            FontWeight="SemiBold"
            Text="{Binding Title}"
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap"
            ToolTip.Tip="{Binding Title}" />

        <!--  Message  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="16,0,16,8"
            Padding="0"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <TextBlock
                FontSize="13"
                LineHeight="18"
                Text="{Binding Message}"
                TextWrapping="Wrap" />
        </ScrollViewer>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="24,16,24,20"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="12">

            <!--  OK Button  -->
            <Button
                Height="36"
                MinWidth="80"
                Padding="20,0"
                Command="{Binding CloseCommand}"
                Content="{Binding DefaultButtonText}"
                IsDefault="True"
                IsVisible="{Binding IsDefaultButtonVisible}"
                Theme="{DynamicResource MaterialOutlineButton}">
                <Button.CommandParameter>
                    <system:Boolean>True</system:Boolean>
                </Button.CommandParameter>
            </Button>

            <!--  Cancel Button  -->
            <Button
                Height="36"
                MinWidth="80"
                Padding="20,0"
                Command="{Binding CloseCommand}"
                Content="{Binding CancelButtonText}"
                IsCancel="True"
                IsVisible="{Binding IsCancelButtonVisible}"
                Theme="{DynamicResource MaterialOutlineButton}" />
        </StackPanel>
    </Grid>
</UserControl>