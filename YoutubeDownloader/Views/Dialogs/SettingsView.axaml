<UserControl
    x:Class="YoutubeDownloader.Views.Dialogs.SettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dialogs="clr-namespace:YoutubeDownloader.ViewModels.Dialogs"
    Width="380"
    x:DataType="dialogs:SettingsViewModel">
    <Grid RowDefinitions="Auto,*,Auto">
        <TextBlock
            Grid.Row="0"
            Margin="16"
            FontSize="19"
            FontWeight="Light"
            Text="{Binding Localization.SettingsTitle}" />

        <Border
            Grid.Row="1"
            Padding="0,8"
            BorderBrush="{DynamicResource MaterialDividerBrush}"
            BorderThickness="0,1">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <!--  Theme  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.ThemeTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.ThemeLabel}" />
                        <ComboBox
                            Width="150"
                            DockPanel.Dock="Right"
                            ItemsSource="{Binding AvailableThemes}"
                            SelectedItem="{Binding Theme}" />
                    </DockPanel>

                    <!--  Language  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.LanguageLabel}" />
                        <ComboBox
                            Width="150"
                            DockPanel.Dock="Right"
                            ItemsSource="{Binding AvailableLanguages}"
                            SelectedItem="{Binding Language}" />
                    </DockPanel>

                    <!--  Auto-updates  -->
                    <DockPanel
                        Margin="16,8"
                        IsVisible="{OnPlatform False,
                                               Windows=True}"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.AutoUpdateTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.AutoUpdateLabel}" />
                        <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding IsAutoUpdateEnabled}" />
                    </DockPanel>

                    <!--  Persist authentication  -->
                    <DockPanel
                        IsVisible="{OnPlatform False,
                                               Windows=True}"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.PersistAuthTooltip}">
                        <TextBlock
                            Margin="16,8"
                            DockPanel.Dock="Left"
                            Text="{Binding Localization.PersistAuthLabel}" />
                        <ToggleSwitch
                            Margin="16,8"
                            DockPanel.Dock="Right"
                            IsChecked="{Binding IsAuthPersisted}" />
                    </DockPanel>

                    <!--  Inject language-specific audio streams  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.InjectAltLanguagesTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.InjectAltLanguagesLabel}" />
                        <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding ShouldInjectLanguageSpecificAudioStreams}" />
                    </DockPanel>

                    <!--  Inject subtitles  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.InjectSubtitlesTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.InjectSubtitlesLabel}" />
                        <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding ShouldInjectSubtitles}" />
                    </DockPanel>

                    <!--  Inject tags  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.InjectTagsTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.InjectTagsLabel}" />
                        <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding ShouldInjectTags}" />
                    </DockPanel>

                    <!--  Skip existing files  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.SkipExistingFilesTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.SkipExistingFilesLabel}" />
                        <ToggleSwitch DockPanel.Dock="Right" IsChecked="{Binding ShouldSkipExistingFiles}" />
                    </DockPanel>

                    <!--  File name template  -->
                    <DockPanel Margin="16,8" LastChildFill="False">
                        <ToolTip.Tip>
                            <TextBlock>
                                <Run Text="{Binding Localization.FileNameTemplateTooltip}" />
                                <LineBreak />
                                <LineBreak />
                                <Run Text="Available tokens:" />
                                <LineBreak />
                                <Run Text=" " />
                                <Run FontWeight="SemiBold" Text="$num" />
                                <Run Text="{Binding Localization.FileNameTemplateTokenNumDesc}" />
                                <LineBreak />
                                <Run Text=" " />
                                <Run FontWeight="SemiBold" Text="$id" />
                                <Run Text="{Binding Localization.FileNameTemplateTokenIdDesc}" />
                                <LineBreak />
                                <Run Text=" " />
                                <Run FontWeight="SemiBold" Text="$title" />
                                <Run Text="{Binding Localization.FileNameTemplateTokenTitleDesc}" />
                                <LineBreak />
                                <Run Text=" " />
                                <Run FontWeight="SemiBold" Text="$author" />
                                <Run Text="{Binding Localization.FileNameTemplateTokenAuthorDesc}" />
                            </TextBlock>
                        </ToolTip.Tip>
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.FileNameTemplateLabel}" />
                        <TextBox
                            Width="150"
                            Height="20"
                            DockPanel.Dock="Right"
                            FontSize="13"
                            Text="{Binding FileNameTemplate}"
                            Theme="{DynamicResource CompactTextBox}" />
                    </DockPanel>

                    <!--  Parallel limit  -->
                    <DockPanel
                        Margin="16,8"
                        LastChildFill="False"
                        ToolTip.Tip="{Binding Localization.ParallelLimitTooltip}">
                        <TextBlock DockPanel.Dock="Left" Text="{Binding Localization.ParallelLimitLabel}" />
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <TextBlock Margin="10,0" Text="{Binding ParallelLimit}" />
                            <Slider
                                Width="150"
                                IsSnapToTickEnabled="True"
                                Maximum="10"
                                Minimum="1"
                                TickFrequency="1"
                                Value="{Binding ParallelLimit}" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  Close button  -->
        <Button
            Grid.Row="2"
            Margin="16"
            HorizontalAlignment="Stretch"
            Command="{Binding CloseCommand}"
            Content="{Binding Localization.CloseButton}"
            IsCancel="True"
            IsDefault="True"
            Theme="{DynamicResource MaterialOutlineButton}" />
    </Grid>
</UserControl>
